@{
    ViewData["Title"] = "About Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
<link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght@100..700,0..1&display=swap" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet" />

<style>
    /* --- BIẾN CSS CỤC BỘ --- */
    .about-wrapper {
        --about-primary: #2563eb;
        --about-text-dark: #0f172a;
        --about-text-gray: #475569;
        --about-bg-light: #f8fafc;
        --about-border: #e2e8f0;
        font-family: 'Inter', sans-serif;
        color: var(--about-text-dark);
        background-color: var(--about-bg-light);
        width: 100%;
        line-height: 1.5;
        font-size: 16px; /* Đặt lại font size chuẩn để tránh thừa kế sai */
    }

        /* --- RESET CSS (Chỉ áp dụng bên trong about-wrapper) --- */
        .about-wrapper *,
        .about-wrapper *::before,
        .about-wrapper *::after {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        .about-wrapper img {
            max-width: 100%;
            height: auto;
            display: block;
        }

        .about-wrapper button {
            cursor: pointer;
            border: none;
            font-family: inherit;
        }

        .about-wrapper a {
            text-decoration: none;
            color: inherit;
        }

        /* --- TIỆN ÍCH (Đã scope kỹ) --- */
        .about-wrapper .about-container {
            max-width: 1280px;
            margin: 0 auto;
            padding: 0 1rem;
        }

    @@media (min-width: 640px) {
        .about-wrapper .about-container {
            padding: 0 1.5rem;
        }
    }

    @@media (min-width: 1024px) {
        .about-wrapper .about-container {
            padding: 0 2rem;
        }
    }

    .about-wrapper .about-section {
        padding: 6rem 0;
    }

    .about-wrapper .section-header {
        text-align: center;
        margin-bottom: 4rem;
    }

    .about-wrapper .section-title {
        font-size: 1.875rem;
        font-weight: 700;
        margin-bottom: 1rem;
        line-height: 1.2;
    }

    @@media (min-width: 768px) {
        .about-wrapper .section-title {
            font-size: 2.25rem;
        }
    }

    .about-wrapper .section-desc {
        color: var(--about-text-gray);
        max-width: 42rem;
        margin: 0 auto;
    }

    .about-wrapper .about-divider {
        height: 6px;
        width: 80px;
        background-color: var(--about-primary);
        margin: 1rem auto 0;
        border-radius: 9999px;
    }

    /* Icon Google - Chỉ chỉnh style khi nằm trong wrapper */
    .about-wrapper .material-symbols-outlined {
        font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        display: inline-block;
        vertical-align: middle;
        line-height: 1;
    }

    /* --- HERO SECTION --- */
    .about-wrapper .about-hero {
        background-color: var(--about-primary);
        color: white;
        position: relative;
        overflow: hidden;
    }

    .about-wrapper .hero-pattern {
        position: absolute;
        inset: 0;
        background-image: radial-gradient(rgba(255, 255, 255, 0.1) 2px, transparent 2px);
        background-size: 40px 40px;
        opacity: 0.3;
        pointer-events: none;
    }

    .about-wrapper .hero-content {
        position: relative;
        z-index: 10;
        display: flex;
        flex-direction: column;
        gap: 3rem;
        align-items: center;
    }

    @@media (min-width: 1024px) {
        .about-wrapper .hero-content {
            flex-direction: row;
        }

        .about-wrapper .hero-text {
            width: 50%;
            text-align: left;
        }

        .about-wrapper .hero-image {
            width: 50%;
        }
    }

    .about-wrapper .hero-badge {
        display: inline-block;
        padding: 0.375rem 1rem;
        background-color: rgba(255, 255, 255, 0.2);
        border-radius: 9999px;
        font-size: 0.875rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        backdrop-filter: blur(4px);
    }

    .about-wrapper .hero-title {
        font-size: 2.25rem;
        font-weight: 800;
        line-height: 1.2;
        margin-bottom: 1.5rem;
    }

    @@media (min-width: 768px) {
        .about-wrapper .hero-title {
            font-size: 3.75rem;
        }
    }

    .about-wrapper .highlight-text {
        color: #bfdbfe;
    }

    .about-wrapper .hero-desc {
        font-size: 1.125rem;
        color: #dbeafe;
        margin-bottom: 2rem;
        line-height: 1.6;
    }

    /* Đổi tên class btn-white thành about-btn-white để tránh trùng */
    .about-wrapper .about-btn-white {
        background-color: white;
        color: var(--about-primary);
        padding: 0.875rem 2rem;
        border-radius: 0.75rem;
        font-weight: 700;
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }

        .about-wrapper .about-btn-white:hover {
            background-color: #eff6ff;
        }

    .about-wrapper .hero-img-wrapper {
        position: relative;
    }

        .about-wrapper .hero-img-wrapper img {
            border-radius: 1rem;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
            border: 4px solid rgba(255, 255, 255, 0.1);
            width: 100%;
            height: 450px;
            object-fit: cover;
        }

    .about-wrapper .hero-glow {
        position: absolute;
        inset: -1rem;
        background-color: rgba(255, 255, 255, 0.1);
        border-radius: 1.5rem;
        filter: blur(24px);
        z-index: -1;
    }

    /* --- CORE VALUES --- */
    .about-wrapper .bg-white {
        background-color: white;
    }

    .about-wrapper .grid-values {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
    }

    @@media (min-width: 768px) {
        .about-wrapper .grid-values {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @@media (min-width: 1024px) {
        .about-wrapper .grid-values {
            grid-template-columns: repeat(4, 1fr);
        }
    }

    .about-wrapper .value-card {
        background-color: #f8fafc;
        padding: 2rem;
        border-radius: 1.5rem;
        border: 1px solid var(--about-border);
        transition: all 0.3s ease;
    }

        .about-wrapper .value-card:hover {
            border-color: var(--about-primary);
        }

        .about-wrapper .value-card .material-symbols-outlined {
            font-size: 2.25rem;
            color: var(--about-primary);
            margin-bottom: 1.5rem;
            transition: transform 0.3s;
        }

        .about-wrapper .value-card:hover .material-symbols-outlined {
            transform: scale(1.1);
        }

        .about-wrapper .value-card h3 {
            font-size: 1.25rem;
            font-weight: 700;
            margin-bottom: 0.75rem;
        }

        .about-wrapper .value-card p {
            font-size: 0.875rem;
            color: var(--about-text-gray);
        }

    /* --- TIMELINE --- */
    .about-wrapper .timeline-wrapper {
        position: relative;
    }

    .about-wrapper .timeline-line {
        display: none;
        position: absolute;
        top: 50%;
        left: 0;
        width: 100%;
        height: 4px;
        background-color: #bfdbfe;
        transform: translateY(-50%);
    }

    @@media (min-width: 768px) {
        .about-wrapper .timeline-line {
            display: block;
        }
    }

    .about-wrapper .timeline-grid {
        position: relative;
        z-index: 10;
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
    }

    @@media (min-width: 768px) {
        .about-wrapper .timeline-grid {
            grid-template-columns: repeat(4, 1fr);
        }
    }

    .about-wrapper .timeline-card {
        background-color: white;
        padding: 1.5rem;
        border-radius: 1rem;
        border: 1px solid var(--about-border);
        box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
        position: relative;
    }

    .about-wrapper .year-badge {
        width: 3rem;
        height: 3rem;
        background-color: var(--about-primary);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        margin-bottom: 1rem;
    }

    @@media (min-width: 768px) {
        .about-wrapper .year-badge {
            position: absolute;
            bottom: -5rem;
            left: 50%;
            transform: translateX(-50%);
            margin-bottom: 0;
        }

        .about-wrapper .spacer-desktop {
            height: 6rem;
            display: block;
        }
    }

    @@media (max-width: 767px) {
        .about-wrapper .spacer-desktop {
            display: none;
        }
    }

    /* --- STATS SECTION --- */
    .about-wrapper .stats-section {
        background-color: var(--about-primary);
        color: white;
        position: relative;
        overflow: hidden;
    }

    .about-wrapper .stats-blob {
        position: absolute;
        width: 24rem;
        height: 24rem;
        background-color: rgba(255,255,255,0.05);
        border-radius: 50%;
        filter: blur(64px);
    }

    .about-wrapper .blob-1 {
        top: 0;
        right: -12rem;
        margin-top: -12rem;
    }

    .about-wrapper .blob-2 {
        bottom: 0;
        left: -12rem;
        margin-bottom: -12rem;
    }

    .about-wrapper .stats-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 3rem;
        text-align: center;
    }

    @@media (min-width: 1024px) {
        .about-wrapper .stats-grid {
            grid-template-columns: repeat(4, 1fr);
        }
    }

    .about-wrapper .stat-number {
        font-size: 3.75rem;
        font-weight: 900;
        margin-bottom: 0.5rem;
        line-height: 1;
    }

    .about-wrapper .stat-label {
        color: #bfdbfe;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.875rem;
        letter-spacing: 0.1em;
        margin-bottom: 0.5rem;
    }

    /* --- TEAM SECTION --- */
    .about-wrapper .team-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 3rem;
    }

    @@media (min-width: 768px) {
        .about-wrapper .team-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    .about-wrapper .team-card:hover .team-img {
        transform: scale(1.1);
    }

    .about-wrapper .team-img-wrapper {
        position: relative;
        overflow: hidden;
        border-radius: 1rem;
        background-color: #f1f5f9;
        aspect-ratio: 4/5;
        margin-bottom: 1.5rem;
    }

    .about-wrapper .team-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .about-wrapper .team-name {
        font-size: 1.25rem;
        font-weight: 700;
        margin-bottom: 0.25rem;
    }

    .about-wrapper .team-role {
        color: var(--about-primary);
        font-weight: 600;
        margin-bottom: 0.75rem;
    }

    .about-wrapper .team-bio {
        font-size: 0.875rem;
        color: var(--about-text-gray);
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    /* --- PARTNERS --- */
    .about-wrapper .bg-gray-light {
        background-color: #f8fafc;
        border-top: 1px solid var(--about-border);
        border-bottom: 1px solid var(--about-border);
    }

    .about-wrapper .partners-flex {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
        gap: 2rem;
        opacity: 0.6;
        filter: grayscale(100%);
        transition: all 0.3s;
    }

        .about-wrapper .partners-flex:hover {
            opacity: 1;
            filter: grayscale(0);
        }

    @@media (min-width: 768px) {
        .about-wrapper .partners-flex {
            gap: 4rem;
        }
    }

    .about-wrapper .partner-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .about-wrapper .partner-text {
        font-size: 1.25rem;
        font-weight: 700;
        color: #94a3b8;
        text-transform: uppercase;
    }

    .about-wrapper .partner-icon {
        font-size: 2.25rem;
        color: #94a3b8;
    }

    /* --- CSR & CAREERS --- */
    .about-wrapper .two-col-flex {
        display: flex;
        flex-direction: column;
        gap: 4rem;
        align-items: center;
    }

    @@media (min-width: 1024px) {
        .about-wrapper .two-col-flex {
            flex-direction: row;
        }

        .about-wrapper .col-half {
            width: 50%;
        }
    }

    .about-wrapper .csr-img-wrapper {
        position: relative;
    }

    .about-wrapper .csr-img {
        border-radius: 1.5rem;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
        width: 100%;
        height: 400px;
        object-fit: cover;
    }

    .about-wrapper .csr-stat-box {
        position: absolute;
        bottom: -1.5rem;
        right: -1.5rem;
        background-color: var(--about-primary);
        padding: 2rem;
        border-radius: 1rem;
        color: white;
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
        display: none;
    }

    @@media (min-width: 768px) {
        .about-wrapper .csr-stat-box {
            display: block;
        }
    }

    .about-wrapper .csr-list {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        margin-top: 1.5rem;
    }

    .about-wrapper .csr-item {
        display: flex;
        align-items: flex-start;
        gap: 1rem;
    }

    .about-wrapper .icon-box {
        background-color: #dbeafe;
        padding: 0.5rem;
        border-radius: 0.5rem;
        display: flex;
        margin-top: 0.25rem;
    }

        .about-wrapper .icon-box .material-symbols-outlined {
            color: var(--about-primary);
        }

    /* CAREERS */
    .about-wrapper .bg-primary-fade {
        background-color: rgba(37, 99, 235, 0.05);
    }

    .about-wrapper .benefits-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1rem;
        margin-top: 2rem;
    }

    @@media (min-width: 640px) {
        .about-wrapper .benefits-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    .about-wrapper .benefit-card {
        background-color: white;
        padding: 1.5rem;
        border-radius: 1rem;
        border: 1px solid var(--about-border);
        box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    }

    .about-wrapper .jobs-wrapper {
        background-color: white;
        padding: 2rem;
        border-radius: 1.5rem;
        border: 1px solid var(--about-border);
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
    }

    .about-wrapper .job-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem;
        border-radius: 0.75rem;
        border: 1px solid var(--about-border);
        margin-bottom: 1rem;
        transition: all 0.2s;
        cursor: pointer;
    }

        .about-wrapper .job-item:hover {
            border-color: var(--about-primary);
        }

            .about-wrapper .job-item:hover .job-title {
                color: var(--about-primary);
            }

            .about-wrapper .job-item:hover .arrow-icon {
                transform: translateX(4px);
            }

    .about-wrapper .job-title {
        font-weight: 700;
        transition: color 0.2s;
    }

    .about-wrapper .job-meta {
        font-size: 0.75rem;
        color: #64748b;
        margin-top: 0.25rem;
    }

    .about-wrapper .arrow-icon {
        color: #94a3b8;
        transition: transform 0.2s;
    }

    /* Đổi tên class btn-primary thành about-btn-primary để tránh xung đột với header */
    .about-wrapper .about-btn-primary {
        width: 100%;
        margin-top: 1rem;
        padding: 1rem;
        background-color: var(--about-primary);
        color: white;
        font-weight: 700;
        border-radius: 0.75rem;
        transition: background-color 0.2s;
    }

        .about-wrapper .about-btn-primary:hover {
            background-color: #1d4ed8;
        }

    /* FAQ */
    .about-wrapper .faq-container {
        max-width: 56rem;
        margin: 0 auto;
    }

    .about-wrapper .faq-item {
        border: 1px solid var(--about-border);
        border-radius: 1rem;
        overflow: hidden;
        margin-bottom: 1rem;
        box-shadow: 0 1px 2px 0 rgba(0,0,0,0.05);
    }

    .about-wrapper .faq-btn {
        width: 100%;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1.5rem;
        background-color: transparent;
        text-align: left;
        transition: background-color 0.2s;
    }

        .about-wrapper .faq-btn:hover {
            background-color: #f8fafc;
        }

    .about-wrapper .faq-question {
        font-weight: 700;
    }

</style>

