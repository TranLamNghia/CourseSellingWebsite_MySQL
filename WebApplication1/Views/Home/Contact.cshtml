@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />

<style>
    /* --- BIẾN CSS --- */
    .contact-wrapper {
        --c-primary: #135bec; /* Màu chủ đạo */
        --c-primary-fade: rgba(19, 91, 236, 0.1);
        --c-bg-light: #f6f6f8; /* Nền trang */
        --c-bg-dark: #101622; /* Nền Hero */
        --c-text-dark: #0d121b; /* Chữ đen */
        --c-text-gray: #4c669a; /* Chữ xám */
        --c-border: #e7ebf3; /* Viền */
        --c-input-border: #cfd7e7;
        font-family: 'Lexend', sans-serif;
        background-color: var(--c-bg-light);
        color: var(--c-text-dark);
        width: 100%;
        line-height: 1.5;
        font-size: 16px;
    }

        /* --- RESET CSS (Scope nội bộ) --- */
        .contact-wrapper *,
        .contact-wrapper *::before,
        .contact-wrapper *::after {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        .contact-wrapper a {
            text-decoration: none;
            color: inherit;
        }

        .contact-wrapper button {
            cursor: pointer;
            border: none;
            font-family: inherit;
        }

        .contact-wrapper input, .contact-wrapper textarea {
            font-family: inherit;
        }

        /* --- UTILITIES --- */
        .contact-wrapper .container-custom {
            max-width: 1280px;
            margin: 0 auto;
            padding: 0 1.5rem;
        }
    @@media (min-width: 1024px) {
        .contact-wrapper .container-custom

    {
        padding: 0 2.5rem;
    }

    }

    .contact-wrapper .material-symbols-outlined {
        font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        display: inline-block;
        vertical-align: middle;
        line-height: 1;
    }

    /* --- HERO SECTION --- */
    .contact-wrapper .contact-hero {
        background-color: var(--c-bg-dark);
        color: white;
        padding: 6rem 1.5rem;
        position: relative;
        overflow: hidden;
        text-align: center;
    }

    .contact-wrapper .hero-bg-gradient {
        position: absolute;
        inset: 0;
        background-image: radial-gradient(circle at 20% 50%, #135bec 0%, transparent 40%);
        opacity: 0.2;
        pointer-events: none;
    }

    .contact-wrapper .contact-hero-inner {
        position: relative;
        z-index: 10;
        max-width: 1280px;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
    }


    .contact-wrapper .hero-desc {
        font-size: 1.125rem;
        color: rgba(255, 255, 255, 0.8);
        max-width: 42rem;
        margin: 0 auto 2rem;
        font-weight: 300;
        width: 100%;
    }

    .contact-wrapper .brand-badge {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
        margin-bottom: 2rem;
    }

    .contact-wrapper .brand-logo {
        width: 2.5rem;
        height: 2.5rem;
        color: var(--c-primary);
    }

    .contact-wrapper .brand-name {
        font-size: 1.5rem;
        font-weight: 900;
        line-height: 1.25;
    }

    .contact-wrapper .hero-title {
        font-size: 3rem;
        font-weight: 900;
        margin-bottom: 1.5rem;
        letter-spacing: -0.025em;
    }
    @@media (min-width: 768px) {
        .contact-wrapper .hero-title

    {
        font-size: 4.5rem;
    }

    }

    .contact-wrapper .hero-desc {
        font-size: 1.125rem;
        color: rgba(255, 255, 255, 0.8);
        max-width: 42rem;
        margin: 0 auto 2rem;
        font-weight: 300;
    }
    @@media (min-width: 768px) {
        .contact-wrapper .hero-desc

    {
        font-size: 1.25rem;
    }

    }

    /* --- CONTENT SECTION --- */
    .contact-wrapper .content-section {
        padding: 4rem 0;
    }

    .contact-wrapper .grid-layout {
        display: grid;
        grid-template-columns: 1fr;
        gap: 4rem;
    }
    @@media (min-width: 1024px) {
        .contact-wrapper .grid-layout

    {
        grid-template-columns: 1fr 1fr;
    }

    }

    /* Left Column */
    .contact-wrapper .section-heading h2 {
        font-size: 1.875rem;
        font-weight: 700;
        margin-bottom: 1rem;
    }

    .contact-wrapper .section-heading p {
        color: var(--c-text-gray);
    }

    .contact-wrapper .info-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1.5rem;
        margin-top: 2.5rem;
    }
    @@media (min-width: 768px) {
        .contact-wrapper .info-grid

    {
        grid-template-columns: 1fr 1fr;
    }

    }

    .contact-wrapper .info-card {
        background-color: white;
        border: 1px solid var(--c-border);
        border-radius: 0.75rem;
        padding: 1.5rem;
    }

    .contact-wrapper .info-icon {
        font-size: 1.875rem;
        color: var(--c-primary);
        margin-bottom: 0.75rem;
    }

    .contact-wrapper .info-title {
        font-size: 1.125rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .contact-wrapper .info-text {
        font-size: 0.875rem;
        color: var(--c-text-gray);
        line-height: 1.6;
    }

    .contact-wrapper .social-follow {
        margin-top: 1rem;
        display: flex;
        align-items: center;
        gap: 1.5rem;
        padding-top: 1rem;
    }

    .contact-wrapper .social-label {
        font-size: 0.875rem;
        font-weight: 600;
    }

    .contact-wrapper .social-icons {
        display: flex;
        gap: 0.75rem;
    }

    .contact-wrapper .social-link {
        width: 2.5rem;
        height: 2.5rem;
        border-radius: 50%;
        background-color: var(--c-primary-fade);
        color: var(--c-primary);
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s;
    }

        .contact-wrapper .social-link:hover {
            background-color: var(--c-primary);
            color: white;
        }

    /* Right Column (Form) */
    .contact-wrapper .form-card {
        background-color: white;
        border: 1px solid var(--c-border);
        border-radius: 1rem;
        padding: 2rem;
        box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    }
    @@media (min-width: 1024px) {
        .contact-wrapper .form-card

    {
        padding: 3rem;
    }

    }

    .contact-wrapper .form-title {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 2rem;
    }

    .contact-wrapper .form-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1.5rem;
        margin-bottom: 1.5rem;
    }
    @@media (min-width: 768px) {
        .contact-wrapper .form-grid

    {
        grid-template-columns: 1fr 1fr;
    }

    }

    .contact-wrapper .form-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        margin-bottom: 1.5rem;
    }
    /* Xử lý margin bottom cho các group trong grid để tránh bị double margin */
    .contact-wrapper .form-grid .form-group {
        margin-bottom: 0;
    }

    .contact-wrapper .form-label {
        font-size: 0.875rem;
        font-weight: 600;
        color: var(--c-text-gray);
    }

    .contact-wrapper .form-input,
    .contact-wrapper .form-textarea {
        width: 100%;
        border-radius: 0.5rem;
        border: 1px solid var(--c-input-border);
        background-color: transparent;
        padding: 0.75rem 1rem;
        font-size: 1rem;
        outline: none;
        transition: border-color 0.2s, box-shadow 0.2s;
    }

        .contact-wrapper .form-input:focus,
        .contact-wrapper .form-textarea:focus {
            border-color: var(--c-primary);
            box-shadow: 0 0 0 2px var(--c-primary-fade);
        }

    .contact-wrapper .btn-submit {
        width: 100%;
        padding: 1rem;
        background-color: var(--c-primary);
        color: white;
        font-weight: 700;
        font-size: 1.125rem;
        border-radius: 0.75rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        transition: all 0.2s;
    }

        .contact-wrapper .btn-submit:hover {
            box-shadow: 0 10px 15px -3px rgba(19, 91, 236, 0.3);
            transform: translateY(-1px);
        }

        .contact-wrapper .btn-submit:active {
            transform: scale(0.98);
        }

</style>

<div class="contact-wrapper">

    <section class="contact-hero">
        <div class="hero-bg-gradient"></div>

        <div class="contact-hero-inner">
            <div class="brand-badge">
                <div class="brand-logo">
                    <svg fill="none" viewBox="0 0 48 48" xmlns="http://www.w3.org/2000/svg" style="width: 100%; height: 100%;">
                        <path clip-rule="evenodd" d="M39.475 21.6262C40.358 21.4363 40.6863 21.5589 40.7581 21.5934C40.7876 21.655 40.8547 21.857 40.8082 22.3336C40.7408 23.0255 40.4502 24.0046 39.8572 25.2301C38.6799 27.6631 36.5085 30.6631 33.5858 33.5858C30.6631 36.5085 27.6632 38.6799 25.2301 39.8572C24.0046 40.4502 23.0255 40.7407 22.3336 40.8082C21.8571 40.8547 21.6551 40.7875 21.5934 40.7581C21.5589 40.6863 21.4363 40.358 21.6262 39.475C21.8562 38.4054 22.4689 36.9657 23.5038 35.2817C24.7575 33.2417 26.5497 30.9744 28.7621 28.762C30.9744 26.5497 33.2417 24.7574 35.2817 23.5037C36.9657 22.4689 38.4054 21.8562 39.475 21.6262ZM4.41189 29.2403L18.7597 43.5881C19.8813 44.7097 21.4027 44.9179 22.7217 44.7893C24.0585 44.659 25.5148 44.1631 26.9723 43.4579C29.9052 42.0387 33.2618 39.5667 36.4142 36.4142C39.5667 33.2618 42.0387 29.9052 43.4579 26.9723C44.1631 25.5148 44.659 24.0585 44.7893 22.7217C44.9179 21.4027 44.7097 19.8813 43.5881 18.7597L29.2403 4.41187C27.8527 3.02428 25.8765 3.02573 24.2861 3.36776C22.6081 3.72863 20.7334 4.58419 18.8396 5.74801C16.4978 7.18716 13.9881 9.18353 11.5858 11.5858C9.18354 13.988 7.18717 16.4978 5.74802 18.8396C4.58421 20.7334 3.72865 22.6081 3.36778 24.2861C3.02574 25.8765 3.02429 27.8527 4.41189 29.2403Z" fill="currentColor" fill-rule="evenodd"></path>
                    </svg>
                </div>
                <h2 class="brand-name">EduLearn</h2>
            </div>
            <h1 class="hero-title">Get in Touch</h1>
            <p class="hero-desc">
                We're here to help your academic journey. Reach out to us for any inquiries about our programs.
            </p>
        </div>
    </section>

    <section class="content-section">
        <div class="container-custom">
            <div class="grid-layout">

                <div>
                    <div class="section-heading">
                        <h2>Contact Our Team</h2>
                        <p>Choose your preferred way to reach out.</p>
                    </div>

                    <div class="info-grid">
                        <div class="info-card">
                            <span class="material-symbols-outlined info-icon">location_on</span>
                            <h3 class="info-title">Office Address</h3>
                            <p class="info-text">
                                123 Le Loi Street, District 1,<br />
                                Ho Chi Minh City, Vietnam
                            </p>
                        </div>
                        <div class="info-card">
                            <span class="material-symbols-outlined info-icon">mail</span>
                            <h3 class="info-title">Support Email</h3>
                            <p class="info-text">
                                support@edulearn.vn<br />
                                admissions@edulearn.vn
                            </p>
                        </div>
                    </div>

                    <div class="social-follow">
                        <p class="social-label">Follow us:</p>
                        <div class="social-icons">
                            <a class="social-link" href="#">
                                <span class="material-symbols-outlined" style="font-size: 1.25rem;">social_leaderboard</span>
                            </a>
                            <a class="social-link" href="#">
                                <span class="material-symbols-outlined" style="font-size: 1.25rem;">share</span>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="form-card">
                    <h3 class="form-title">Send us a Message</h3>
                    <form action="#" onsubmit="return false;">
                        <div class="form-grid">
                            <div class="form-group">
                                <label class="form-label">Full Name</label>
                                <input class="form-input" placeholder="Nguyen Van A" type="text" />
                            </div>
                            <div class="form-group">
                                <label class="form-label">Email Address</label>
                                <input class="form-input" placeholder="name@example.com" type="email" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Your Message</label>
                            <textarea class="form-textarea" placeholder="How can we help you?" rows="6"></textarea>
                        </div>
                        <button class="btn-submit" type="submit">
                            <span class="material-symbols-outlined">send</span>
                            Send Message
                        </button>
                    </form>
                </div>

            </div>
        </div>
    </section>

</div>