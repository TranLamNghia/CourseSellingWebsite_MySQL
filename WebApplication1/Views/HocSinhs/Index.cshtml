@model IEnumerable<WebApplication1.Models.HocSinh>

@{
    ViewData["Title"] = "Quản lý Học sinh";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    /* Tổng quan layout */
    .admin-header {
        margin-top: 20px;
        margin-bottom: 30px;
        padding: 0 10px;
    }

    .admin-title {
        font-size: 2rem;
        font-weight: 700;
        color: #212529;
        margin-bottom: 5px;
    }

    /* Nút thêm mới nổi bật */
    .btn-add-primary {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 8px;
        width: 100%;
        padding: 16px;
        background: linear-gradient(135deg, #2557e0 0%, #1a44b8 100%);
        color: white !important;
        font-weight: 700;
        text-decoration: none;
        border-radius: 12px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(37, 87, 224, 0.3);
        border: none;
        margin-bottom: 30px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

        .btn-add-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(37, 87, 224, 0.4);
        }

    /* Bảng dữ liệu chuyên nghiệp */
    .table-card {
        background: white;
        padding: 25px;
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.08);
        border: 1px solid #f0f0f0;
    }

    .custom-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 8px; /* Tạo khoảng cách giữa các dòng */
    }

        .custom-table thead th {
            background-color: #f8f9fa;
            color: #495057;
            font-weight: 700;
            text-transform: uppercase;
            font-size: 0.75rem;
            padding: 15px;
            border: none;
        }

        .custom-table tbody tr {
            transition: all 0.2s;
            box-shadow: 0 2px 5px rgba(0,0,0,0.02);
        }

            .custom-table tbody tr:hover {
                background-color: #f4f7ff !important;
                transform: scale(1.005);
            }

        .custom-table tbody td {
            padding: 15px;
            vertical-align: middle;
            background-color: #fff;
            border-top: 1px solid #f1f1f1;
            border-bottom: 1px solid #f1f1f1;
        }

    /* THIẾT KẾ BADGE TRẠNG THÁI SIÊU RÕ NÉT */
    .status-badge {
        padding: 6px 16px;
        border-radius: 50px;
        font-size: 0.75rem;
        font-weight: 800;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        min-width: 130px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        color: #fff !important;
    }

    .badge-active {
        background-color: #2ecc71; /* Xanh lá tươi */
        border: 2px solid #27ae60;
    }

    .badge-locked {
        background-color: #e74c3c; /* Đỏ tươi */
        border: 2px solid #c0392b;
    }

    /* Chấm tròn nhấp nháy cho Active */
    .pulse-dot {
        height: 8px;
        width: 8px;
        background-color: white;
        border-radius: 50%;
        margin-right: 8px;
        animation: pulse 1.5s infinite;
    }

    @@keyframes pulse {
        0% {
            transform: scale(0.95);
            box-shadow: 0 0 0 0 rgba(255, 255, 255, 0.7);
        }

        70% {
            transform: scale(1);
            box-shadow: 0 0 0 10px rgba(255, 255, 255, 0);
        }

        100% {
            transform: scale(0.95);
            box-shadow: 0 0 0 0 rgba(255, 255, 255, 0);
        }
    }

    /* Ảnh đại diện nhỏ */
    .avatar-thumb {
        width: 45px;
        height: 45px;
        border-radius: 10px;
        object-fit: cover;
        border: 2px solid #eee;
    }

    /* Nút hành động */
    .btn-action {
        width: 38px;
        height: 38px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 10px;
        margin-left: 5px;
        transition: 0.2s;
        text-decoration: none;
    }

    .btn-edit {
        background: #eef2ff;
        color: #4338ca;
        border: 1px solid #c7d2fe;
    }

    .btn-details {
        background: #f0fdf4;
        color: #166534;
        border: 1px solid #bbf7d0;
    }

    .btn-action:hover {
        transform: translateY(-2px);
        filter: brightness(0.9);
    }
</style>

<div class="container py-4">
    <div class="admin-header">
        <h1 class="admin-title"><i class="fas fa-users-cog me-2"></i>Quản lý Học sinh</h1>
        <p class="text-muted">Hệ thống quản trị thông tin học viên và trạng thái tài khoản.</p>
    </div>

    <a asp-action="Create" class="btn-add-primary">
        <i class="fas fa-user-plus"></i> THÊM HỌC SINH MỚI VÀO HỆ THỐNG
    </a>

    <div class="table-card">
        <div class="table-responsive">
            <table class="custom-table">
                <thead>
                    <tr>
                        <th style="width: 10%">Mã HS</th>
                        <th style="width: 5%">Ảnh</th>
                        <th style="width: 20%">Thông tin cơ bản</th>
                        <th style="width: 15%">Liên hệ</th>
                        <th style="width: 15%">Ngày tham gia</th>
                        <th style="width: 15%" class="text-center">Trạng thái</th>
                        <th style="width: 20%" class="text-end">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr style="@(item.IsActive ? "" : "opacity: 0.85;")">
                            <td class="text-muted fw-bold small">#@item.MaHocSinh</td>
                            <td>
                                <img src="@(string.IsNullOrEmpty(item.DuongDanAnhDaiDien) ? "/images/default-avatar.png" : item.DuongDanAnhDaiDien)"
                                     class="avatar-thumb" alt="Avatar" />
                            </td>
                            <td>
                                <div class="fw-bold text-dark">@item.HoTen</div>
                                <div class="small text-muted text-uppercase" style="font-size: 0.65rem;">@item.GioiTinh</div>
                            </td>
                            <td class="small">
                                <div><i class="fas fa-envelope me-1 text-muted"></i> @item.Email</div>
                                <div><i class="fas fa-phone me-1 text-muted"></i> @item.DienThoai</div>
                            </td>
                            <td class="small">
                                <i class="far fa-calendar-alt me-1 text-muted"></i> @item.NgayDangKy.ToString("dd/MM/yyyy")
                            </td>
                            <td class="text-center">
                                @if (item.IsActive)
                                {
                                    <div class="status-badge badge-active">
                                        <span class="pulse-dot"></span> ĐANG HOẠT ĐỘNG
                                    </div>
                                }
                                else
                                {
                                    <div class="status-badge badge-locked">
                                        <i class="fas fa-user-lock me-2"></i> ĐANG BỊ KHÓA
                                    </div>
                                }
                            </td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@item.MaHocSinh" class="btn-action btn-edit" title="Chỉnh sửa hồ sơ">
                                    <i class="fas fa-pen-nib"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.MaHocSinh" class="btn-action btn-details" title="Xem chi tiết">
                                    <i class="fas fa-address-card"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>